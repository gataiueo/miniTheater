@model IEnumerable<minitheater.Models.Film>

<h2>Daftar Film</h2>
<div style="display:flex; gap:20px;">
    @foreach (var film in Model)
    {
        <div style="border:1px solid #ccc; padding:10px; width:200px;">
            <img src="@film.Poster" alt="@film.Judul" style="width:100%; height:300px; object-fit:cover;" />
            <h3>@film.Judul</h3>
            <p>@film.Deskripsi</p>
            <a href="/Home/Jadwal/@film.Id">Lihat Jadwal</a>
        </div>
    }
</div>
